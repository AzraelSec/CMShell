{
    "name" : "call_plugin",
    "description" : "call_plugin [plugin_name]",
    "source" : ["function(env, args)",
                "{",
                    "if(args.length == 0)",
                        "env.push_output('usage: call_plugin [plugin_name]');",
                    "else",
                    "{",
                        "var pushed = false;",
                        "for(var i in env.plugins_informations)",
                            "if(env.plugins_informations[i]['name'] == args[0])",
                            "{",
                                "var args_pass = [];",
                                "for(j = 1; j < args.length; j++)",
                                    "args_pass.push(args[j]);",
                                "var handler = eval( '(' + env.plugins_informations[i]['source'].join('\\n') + ')' );",
                                "handler(env, args_pass);",
                                "pushed = true;",
                            "}",
                        "if(!pushed)",
                            "env.push_output('call_plugin: plugin \"' + args[0] + '\" not found')",
                    "}",
                "}"]
}